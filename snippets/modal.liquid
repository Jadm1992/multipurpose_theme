<div id="popup1" class="overlay">
  <div class="popup">
    <a class="close" href="#">&times;</a>
    <div class="box-content newleter-content">
      <h2>Sign up &amp; get 10% off</h2>
      <label>Subscribe to our newsletters now and stay up-to-date with new collections, the latest lookbooks, and exclusive offers.</label>
      <div id="frm_subscribe">
        <form name="subscribe" id="subscribe_popup">
          <input type="text" value="" name="subscribe_pemail" id="subscribe_pemail" placeholder="Enter your email">
          <input type="hidden" value="" name="subscribe_pname" id="subscribe_pname">
          <div id="notification"></div>
          <button type="submit">Submit</button>
        </form>
        <div class="subscribe-bottom">
          <input type="checkbox" id="newsletter_popup_dont_show_again">
          <label for="newsletter_popup_dont_show_again">Don't show this popup again</label>
        </div>
      </div>
    </div>
  </div>
</div>

<style>
.overlay {
  display: none;
  position: fixed;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  background: rgba(0, 0, 0, 0.7);
  z-index: 9999;
}

.overlay:target {
  display: block;
}

.popup {
  margin: 0px auto;
  padding: 50px 20px;
  background: #fff;
  border-radius: 0px;
  height: 260px;
  width: 690px;
  position: fixed;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
}

.popup h2 {
  margin-top: 0;
  color: #333;
}

.popup .close {
  position: absolute;
  top: 10px;
  right: 10px;
  font-size: 30px;
  color: #333;
  text-decoration: none;
}

.popup .box-content {
  text-align: center;
}

.popup .box-content label {
  font-size: 14px;
  line-height: 26px;
}

.popup input[type="text"] {
  background: #EBEBEB;
  border: none;
  height: 40px;
  width: 65%;
  margin: 20px 0;
  padding-left: 15px;
}

.popup button {
  cursor: pointer;
  border: none;
  background: #333;
  padding: 3px 25px;
  text-transform: uppercase;
  font-size: 14px;
  color: #fff;
}

.subscribe-bottom {
  margin-top: 10px;
}

.subscribe-bottom label {
  font-size: 14px;
}
</style>

<script>
document.addEventListener("DOMContentLoaded", function() {
  var modal = document.getElementById("popup1");
  var closeBtn = document.querySelector("#popup1 .close");

  closeBtn.addEventListener("click", function() {
    modal.style.display = "none";
  });

  window.addEventListener("click", function(event) {
    if (event.target === modal) {
      modal.style.display = "none";
    }
  });

  var form = document.getElementById("subscribe_popup");
  form.addEventListener("submit", function(event) {
    event.preventDefault();
    var emailInput = document.getElementById("subscribe_pemail");
    var email = emailInput.value;

    // Display thank you message
    var modalContent = document.querySelector("#popup1 .box-content");
    modalContent.innerHTML = "<h2>Thank you for subscribing!</h2><p>We appreciate your support.</p>";

    // Perform further validation or submit the email using an AJAX request
    // Here, you can send the email to your server for processing
    console.log("Submitted email:", email);

    // Hide the modal after a certain time (e.g., 3 seconds)
    setTimeout(function() {
      modal.style.display = "none";
    }, 3000);
  });
});
</script>
